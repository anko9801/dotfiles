#!/usr/bin/env bash
# Git pre-commit hook
# Install: ln -sf ~/.config/git/hooks/pre-commit .git/hooks/pre-commit

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Check for trailing whitespace
if git diff --check --cached | grep -E '^\+.*\s+$'; then
    echo -e "${RED}Error: Trailing whitespace found${NC}"
    exit 1
fi

# Check for merge conflicts
if git diff --cached --name-only | xargs grep -E '<<<<<<< |======= |>>>>>>> ' 2>/dev/null; then
    echo -e "${RED}Error: Merge conflict markers found${NC}"
    exit 1
fi

# Check for private keys
if git diff --cached --name-only | xargs grep -E 'BEGIN (RSA|DSA|EC|OPENSSH) PRIVATE KEY' 2>/dev/null; then
    echo -e "${RED}Error: Private key detected${NC}"
    exit 1
fi

# Check for large files (>1MB)
for file in $(git diff --cached --name-only); do
    if [[ -f "$file" ]] && [[ $(stat -f%z "$file" 2>/dev/null || stat -c%s "$file" 2>/dev/null) -gt 1048576 ]]; then
        echo -e "${RED}Error: Large file detected: $file (>1MB)${NC}"
        exit 1
    fi
done

# Run git-secrets if available
if command -v git-secrets &> /dev/null; then
    git secrets --pre_commit_hook -- "$@"
fi

echo -e "${GREEN}All pre-commit checks passed!${NC}"