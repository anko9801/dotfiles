#!/usr/bin/env zsh
# WSL-specific environment and configurations

# WSL environment variables
export BROWSER="wslview"
export WSL_HOST=$(tail -1 /etc/resolv.conf | cut -d' ' -f2 2>/dev/null || echo "localhost")

# Linux paths (shared with native Linux)
export PATH="/usr/local/sbin:/usr/sbin:/sbin:$PATH"

# Snap support
[[ -d "/snap/bin" ]] && export PATH="/snap/bin:$PATH"

# Flatpak support
[[ -d "/var/lib/flatpak/exports/bin" ]] && export PATH="/var/lib/flatpak/exports/bin:$PATH"

# Add Windows utilities to PATH
export PATH="$PATH:/mnt/c/Windows/System32:/mnt/c/Windows/System32/WindowsPowerShell/v1.0"

# WSL2 time sync fix
wsl2_fix_time() {
    echo "🕐 Syncing WSL2 time..."
    if command -v ntpdate &>/dev/null; then
        sudo ntpdate ntp.nict.jp || sudo ntpdate time.google.com
    elif command -v hwclock &>/dev/null; then
        sudo hwclock -s
    else
        echo "❌ No time sync tool found (install ntpdate or util-linux)"
        return 1
    fi
    echo "✅ Time synced!"
}

# WSL2 memory reclaim
wsl2_compact_memory() {
    echo "🧹 Compacting WSL2 memory..."
    echo 1 | sudo tee /proc/sys/vm/drop_caches >/dev/null
    echo "✅ Memory compacted!"
}

# Open Windows Explorer from current directory
explorer() {
    explorer.exe "${1:-.}"
}

# Copy to Windows clipboard
command -v clip.exe &>/dev/null && alias pbcopy='clip.exe'

# Paste from Windows clipboard
command -v powershell.exe &>/dev/null && alias pbpaste='powershell.exe -command "Get-Clipboard" | tr -d "\r"'

# Docker Desktop integration
if [[ -S "/var/run/docker.sock" ]]; then
    export DOCKER_HOST="unix:///var/run/docker.sock"
fi

# X11 forwarding for GUI apps (if VcXsrv or similar is running)
(command -v vcxsrv.exe &>/dev/null || command -v xming.exe &>/dev/null) && export DISPLAY="${WSL_HOST}:0"

# 1Password SSH Agent via npiperelay
setup_1password_ssh_agent() {
    export SSH_AUTH_SOCK="$HOME/.ssh/agent.sock"
    
    # Check if npiperelay is available
    if ! command -v npiperelay.exe &>/dev/null; then
        echo "⚠️  npiperelay.exe not found!"
        echo "   Please install npiperelay in Windows and ensure it's in PATH"
        echo "   https://github.com/jstarks/npiperelay"
        return 1
    fi
    
    # Check if socket is already running
    if ! ss -a | grep -q "$SSH_AUTH_SOCK" &>/dev/null; then
        # Remove old socket if exists
        [[ -e "$SSH_AUTH_SOCK" ]] && rm -f "$SSH_AUTH_SOCK"
        
        # Start SSH agent relay
        echo "🔑 Starting 1Password SSH agent relay..."
        (setsid socat UNIX-LISTEN:"$SSH_AUTH_SOCK",fork EXEC:"npiperelay.exe -ei -s //./pipe/openssh-ssh-agent",nofork &) &>/dev/null
    fi
}

# Initialize 1Password SSH agent
setup_1password_ssh_agent