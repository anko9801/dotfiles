# Global gitignore patterns
[
  # OS
  ".DS_Store"
  "Thumbs.db"
  "Desktop.ini"

  # Editors
  "*.swp"
  "*.swo"
  "*~"
  ".idea/"
  ".vscode/"
  "*.sublime-*"
  ".*.un~"

  # Build artifacts
  "node_modules/"
  "__pycache__/"
  "*.pyc"
  "*.pyo"
  ".pytest_cache/"
  "target/"
  "dist/"
  "build/"
  "*.egg-info/"

  # Environment
  ".env"
  ".env.local"
  ".env.*.local"
  ".envrc"
  ".direnv/"

  # Logs
  "*.log"
  "npm-debug.log*"
  "yarn-debug.log*"
  "yarn-error.log*"

  # Misc
  "*.bak"
  "*.tmp"
  "*.temp"
  ".cache/"
  ".worktrees/"
]
