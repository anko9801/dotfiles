  "copyOnSelect": true,
  "copyFormatting": "none",

  "profiles": {
    "defaults": {
      "colorScheme": "Catppuccin Mocha",
      "font": {
        "face": "JetBrainsMono Nerd Font",
        "size": 12
      },
      "padding": "8",
      "scrollbarState": "hidden",
      "antialiasingMode": "cleartype",
      "cursorShape": "bar"
    },
    "list": [
      {
        "guid": "{2c4de342-38b7-51cf-b940-2309a097f518}",
        "name": "Ubuntu",
