# Common shell aliases

# ls aliases
alias ls='ls --color=auto'
alias ll='ls -lah'
alias la='ls -A'
alias l='ls -CF'

# Safety nets
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Git aliases
alias g='git'
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --oneline --graph'

# Modern replacements (if available)
command -v bat >/dev/null 2>&1 && alias cat='bat'
command -v exa >/dev/null 2>&1 && alias ls='exa'
command -v rg >/dev/null 2>&1 && alias grep='rg'
command -v fd >/dev/null 2>&1 && alias find='fd'

# chezmoi aliases
alias cs='chezmoi status'
alias ca='chezmoi add'
alias ce='chezmoi edit'
alias cd='chezmoi diff'
alias cup='chezmoi update'

# 1Password CLI shortcuts
if command -v op >/dev/null 2>&1; then
    alias opl='op item list'
    alias opg='op item get'
    alias ops='op item get --fields password'
    alias opv='op vault list'
    alias opa='op account list'
    # Get password and copy to clipboard (macOS)
    alias opc='op item get --fields password | pbcopy'
    # Generate password
    alias opgen='op item create --generate-password'
    # Sign in
    alias signin='eval $(op signin)'
fi

# Reload shell config
alias reload='source $ZDOTDIR/.zshrc'

# ghq shortcuts
if command -v ghq >/dev/null 2>&1; then
    alias gq='ghq get'
    alias gql='ghq list'
    alias gqr='ghq root'
    # ghq + fzf integration
    alias gqf='cd $(ghq list -p | fzf)'
fi

# gitui shortcut
if command -v gitui >/dev/null 2>&1; then
    alias gu='gitui'
fi

# dust (better du)
if command -v dust >/dev/null 2>&1; then
    alias du='dust'
fi

# zellij shortcuts
if command -v zellij >/dev/null 2>&1; then
    alias zj='zellij'
    alias zja='zellij attach'
    alias zjl='zellij list-sessions'
    alias zjk='zellij kill-session'
fi

# Modern CLI replacements
# Better alternatives to traditional commands
if command -v eza >/dev/null 2>&1; then
    alias ls='eza'
    alias ll='eza -l'
    alias la='eza -la'
    alias lt='eza --tree'
    alias lta='eza --tree -a'
fi

if command -v bat >/dev/null 2>&1; then
    alias cat='bat --style=plain'
    alias catp='bat -p'  # plain output
    alias catl='bat'     # with line numbers
fi

if command -v fd >/dev/null 2>&1; then
    alias find='fd'
fi

if command -v rg >/dev/null 2>&1; then
    alias grep='rg'
fi

if command -v sd >/dev/null 2>&1; then
    alias sed='sd'
fi

if command -v procs >/dev/null 2>&1; then
    alias ps='procs'
fi

if command -v bottom >/dev/null 2>&1; then
    alias top='btm'
    alias htop='btm'
fi

# HTTP tools
if command -v httpie >/dev/null 2>&1; then
    alias http='httpie'
fi

# Markdown viewer
if command -v glow >/dev/null 2>&1; then
    alias mdview='glow'
    alias mdp='glow -p'  # pager mode
fi

# JSON/YAML processors
if command -v yq >/dev/null 2>&1; then
    alias yaml='yq'
fi

# pnpm shortcuts
if command -v pnpm >/dev/null 2>&1; then
    alias pn='pnpm'
    alias pni='pnpm install'
    alias pna='pnpm add'
    alias pnad='pnpm add -D'
    alias pnr='pnpm run'
    alias pnx='pnpm exec'
    alias pnu='pnpm update'
    alias pnrm='pnpm remove'
    alias pnls='pnpm list'
    alias pnout='pnpm outdated'
    alias pnaudit='pnpm audit'
fi